#include <iostream>  
using namespace std;  

void quick_sort(int a[], int left, int right)  
{  
    if(left>right)  
	return;
		
    int i = left;  
    int j = right;  
    int temp = a[i];  //temp中存的就是基准数
  
    while(i<j)  
    {  
        while(i<j&&a[j]>temp) //顺序很重要，要先从右边开始找 
            j--;
	a[i++] = a[j];
        while(i<j&&a[i]<temp)  //再找左边的
            i++;
	a[j--] = a[i];
    }
    a[i]=temp;	//最终将基准数归位
    
    quick_sort(a, left, i-1);  
    quick_sort(a, i+1, right);  
     
}  
int main()  
{  
    int a[] = {100,8,15 ,37,26,13,27,49,55,14};
    cout<<"Before sort: ";  
    for(int i =0 ; i<10;i++)  
        cout<<a[i]<<" ";  
    cout<<endl;  
    quick_sort(a, 0, 9);  
    cout<<"After sort: ";  
    for(int i =0 ; i<10;i++)  
        cout<<a[i]<<" ";  
    cout<<endl;  
}  
